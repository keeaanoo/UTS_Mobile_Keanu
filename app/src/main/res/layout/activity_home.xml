<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/screen_padding">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvHalo"
            android:text="Halo Nazwa,"
            android:textSize="@dimen/text_large"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Pilih makanan favoritmu:"
            android:textSize="@dimen/text_small"
            android:layout_marginTop="@dimen/margin_xsmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/radioGroupMakanan"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium"
            android:layout_marginTop="@dimen/margin_xsmall"
            android:background="#1E000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbNasiGoreng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nasi Goreng Ayam"
                android:textSize="@dimen/text_regular" />

            <RadioButton
                android:id="@+id/rbMieGoreng"
                android:text="Mie Goreng Spesial"
                android:textSize="@dimen/text_regular"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <RadioButton
                android:id="@+id/rbAyamBakar"
                android:text="Ayam Bakar Madu"
                android:textSize="@dimen/text_regular"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <RadioButton
                android:id="@+id/rbSateAyam"
                android:text="Sate Ayam Madura"
                android:textSize="@dimen/text_regular"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <RadioButton
                android:id="@+id/rbRendang"
                android:text="Rendang Padang"
                android:textSize="@dimen/text_regular"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <RadioButton
                android:id="@+id/rbSoto"
                android:text="Soto Betawi"
                android:textSize="@dimen/text_regular"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <RadioButton
                android:id="@+id/rbBakso"
                android:text="Bakso Urat Pedas"
                android:textSize="@dimen/text_regular"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <RadioButton
                android:id="@+id/rbPecelLele"
                android:text="Pecel Lele Sambal Terasi"
                android:textSize="@dimen/text_regular"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <RadioButton
                android:id="@+id/rbGudeg"
                android:text="Gudeg Jogja"
                android:textSize="@dimen/text_regular"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <RadioButton
                android:id="@+id/rbRawon"
                android:text="Rawon Daging Sapi"
                android:textSize="@dimen/text_regular"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

        </RadioGroup>

        <Button
            android:id="@+id/btnPesan"
            android:text="Pesan Sekarang"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:textSize="@dimen/button_text_size"
            android:backgroundTint="#000000"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>
